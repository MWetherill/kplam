<div class="container py-5">
  <h1 class="mb-5">Languages</h1>

  
    <% @languages.each do |language| %>
    <div class="d-flex flex-row justify-content-between align-items-center w-50">
      <%= link_to language.title, language_path(language), class: "text-decoration-none" %>
      <div class="d-flex flex-row justify-content-end align-items-center">
        <%= link_to "Edit", edit_language_path(language), class: "btn btn-primary" %>
        <%= link_to ('<i class="fa fa-times"></i>').html_safe, language, method: :delete, class: "ms-3" %>
      </div>
    </div>
    <hr class="w-50">
    <% end %>
  
  <%= link_to "Add", new_language_path, class: "btn btn-primary mt-5" %>
</div>