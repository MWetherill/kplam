<div class="container py-5">

  <!-- profile image -->
  <div class="d-flex flex-column justify-content-center align-items-center mb-4">
    <%= image_tag displayed_image(@user.image), loading: "lazy", alt: @user.username, class: "profile-picture-large rounded-full mb-3" %>
    <h1 class="mb-3"><%= @user.username %></h1>
    <h6 class="mb-3"><%= @user.email %></h6>
    <p class="mb-4 text-center px-5"><%= @user.description %></p>
    <%  if current_user == @user %>
     <%= link_to "Edit Profile", edit_user_path, class: "btn btn-primary" %>
    <% end %>
  </div>
  <!---->

  <div class="loop-container container py-5 px-0">
    <div class="d-flex flex-row justify-content-start align-items-center mb-5">
      <h3>Projects created by: <%= @user.username %></h3>
    </div>
    <div class="d-flex flex-row flex-wrap justify-content-between align-items-center mb-5">
      <% @projects.each do |project| %>
        <div class="card project-card text-center text-black justify-content-center align-items-center mb-2">
          <h4 class="card-title text-decoration-none"><%= project.title %></h4>
          <p class="card-created-by mb-0"><%= created_by(project.user) %></p>
          <p class="card-created-on mb-0"><%= created_at(project) %></p>
          <p class="card-updated-on mb-4"><%= updated_at(project) %></p>
          <%= link_to "View Project", project, class: "card-button text-decoration-none" %>
        </div>
      <% end %>
    </div>
  </div>

  <hr>

  <div class="loop-container container py-5 px-0">
    <div class="d-flex flex-row justify-content-start align-items-center mb-5">
      <h3>Posts created by: <%= @user.username %></h3>
    </div>
    <div class="d-flex flex-row flex-wrap justify-content-between align-items-center mb-5">
      <% @posts.each do |post| %>
        <div class="card post-card text-center text-black justify-content-center align-items-center mb-2">
          <h4 class="card-title text-decoration-none"><%= post.title %></h4>
          <p class="card-created-by mb-0"><%= created_by(post.user) %></p>
          <p class="card-created-on mb-0"><%= created_at(post) %></p>
          <p class="card-updated-on mb-4"><%= updated_at(post) %></p>
          <%= link_to "View Post", post, class: "card-button text-decoration-none" %>
        </div>
      <% end %>
    </div>
  </div>

</div>