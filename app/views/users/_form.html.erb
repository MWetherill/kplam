<%= form_with(model: @user, class: "w-100") do |form| %>
  <div class="user-form mb-3 d-flex flex-column justify-content-start align-items-start">
    <% if @user.persisted? %>
      <div class="d-flex flex-column jusify-content-start align-items-start mb-4">
        <h6 class="mb-2">Profile Picture</h6>
        <%= form.file_field :image, class: "form-field me-4" %>
      </div>
      <div class="d-flex flex-column jusify-content-start align-items-start mb-4 w-100">
        <h6 class="mb-2">Description</h6>
        <%= form.text_area :description, class: "form-field me-4 w-100" %>
      </div>
      <%= form.submit "Update", class: "btn btn-primary me-3" %>
    <% else %>
      <%= form.submit "Add", class: "btn btn-success" %>
    <% end %>
  </div>
<% end %>