<div class="container py-5">
  <h1 class="mb-3"><%= @event.title %></h1>
  <h6 class="mb-2"><%= created_by(@event.user_id) %></h6>
  <p class="mb-5"><%= created_at(@event) %></p>
  <hr>
  <br>
  <div class="mb-5"><%= @event.description %></div>
  <div class="mb-3">
  <%= link_to 'Edit', edit_event_path, class: "btn btn-primary" %>
  <%= link_to "Delete", @event, class: "btn btn-danger", method: :delete, data:
    { confirm: "Are you sure?" } %>
  </div>
  <%= link_to 'Back to events', events_path %>
</div>