<!-- projects -->
<div class="container py-5">
  <div class="loop-container container py-5 px-0">
    <div class="d-flex flex-row justify-content-start align-items-center mb-5">
      <h1>Projects</h1>
      <%= link_to "View all", projects_path, class: "btn btn-primary ms-3" %>
    </div>
    <div class="d-flex flex-row flex-wrap justify-content-between align-items-center mb-5">
      <% @projects.each do |project| %>
        <div class="card project-card text-center text-black justify-content-center align-items-center mb-2">
          <h4 class="card-title text-decoration-none"><%= project.title %></h4>
          <p class="card-created-by mb-0"><%= created_by(project.user) %></p>
          <p class="card-created-on mb-0"><%= created_at(project) %></p>
          <p class="card-updated-on mb-4"><%= updated_at(project) %></p>
          <%= link_to "View Project", project, class: "card-button text-decoration-none" %>
        </div>
      <% end %>
    </div>
    <%= link_to "New Project", new_project_path, class: "btn btn-success" %>
  </div>
  <hr>
</div>


