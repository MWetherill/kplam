<div class="loop-container container py-5 px-0">
  <h1 class="mb-5">Posts</h1>
  <div class="d-flex flex-row flex-wrap justify-content-between align-items-center mb-5">
    <% @posts.each do |post| %>
      <div class="card post-card text-center text-black justify-content-center align-items-center mb-2">
        <h4 class="card-title text-decoration-none"><%= post.title %></h4>
        <p class="card-created-by mb-0"><%= created_by(post.user) %></p>
        <p class="card-created-on mb-0"><%= created_at(post) %></p>
        <p class="card-updated-on mb-4"><%= updated_at(post) %></p>
        <%= link_to "View Post", post, class: "card-button text-decoration-none" %>
      </div>
    <% end %>
  </div>
  <%= link_to "New Post", new_post_path, class: "btn btn-success" %>
</div>
